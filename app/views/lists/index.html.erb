  <h2>Your lists</h2>
  
  <% if @lists.blank? %>
    <h3>You do not have any list</h3>
  <% else %>
    <table>
      <thead>
          <th>Name of list</th>
          <th>Number of tasks</th>
      </thead>
      <tbody>
      <% @lists.each do |list_item| %>
        <tr>
          <td><%= list_item.title %></td>
          <td><%= list_item.tasks.count %></td>
          <td class="links">
            <%= link_to 'Show', list_path(list_item) %>
            <%= link_to 'Edit', edit_list_path(list_item) %>
            <%= link_to 'Delete', list_path(list_item), method: :delete %>
            <%= link_to 'Add task', "/lists/#{list_item.id}/tasks/new" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
    <p><%= link_to 'Add a list', new_list_path %></p>
